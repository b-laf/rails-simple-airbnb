<div class="container">
  <h1>All our Flats</h1>
  <p>All <%= Flat.count %> flats.</p>
  <div class="row justify-content-center">
    <% @flats.each do |flat| %>
      <div class="card col-11 col-md-5 col-lg-3 p-0 m-2 shadow-sm">
        <img src="<%= flat.urlimg %>" alt="" class="card-img-top">
        <div class="card-body">
          <h4><%= flat.name %></h4>
          <p><%= flat.address %></p>
          <div class="d-flex align-items-center">
            <i class="fa-solid fa-people-roof"></i>
            <p class="m-0 ms-2 me-4"><%= flat.number_of_guests %></p>
            <i class="fa-solid fa-euro-sign"></i>
            <p class="m-0 ms-2"><%= flat.price_per_night %></p>
          </div>
          <div class="mt-3 d-flex flex-row justify-content-around align-items-center">
            <%= link_to "Details", flat_path(flat), class: "btn btn-outline-secondary p-2" %>
            <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-outline-secondary p-2" %>
            <%= link_to "Delete",
              flat_path(flat),
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-secondary p-2"
            %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
